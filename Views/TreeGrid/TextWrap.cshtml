@using Syncfusion.EJ2
@using Syncfusion.EJ2.Grids

@*custom code start*@

@{
    ViewData["Title"] = "TextWrap";
}

@*custom code end*@

@section ControlsSection{
    <div class="control-section">
        @(Html.EJS().TreeGrid("TreeGrid")
            .DataSource((IEnumerable<object>)ViewData["datasource"])
            .AllowTextWrap()
            .AllowPaging()
            .AllowFiltering()
            .FilterSettings(filter =>
            {
                filter.Type(Syncfusion.EJ2.TreeGrid.FilterType.Excel);
            })
            .AllowSorting()
            .PageSettings(p => p.PageSize(8))
            .ClipMode(ClipMode.EllipsisWithTooltip)
            .Columns(col =>
               {
                   col.Field("TaskID").HeaderText("Task ID").Width(140).TextAlign(TextAlign.Right).Add();
                   col.Field("TaskName").HeaderText("Task Name").Width(240).Add();
                   col.Field("Description").HeaderText("Description (Comprehensive Objectives for Deliverables)").Width(370).Add();
                   col.Field("EmployeeName").HeaderText("Assigned To").Width(180).Add();
                   col.Field("Priority").HeaderText("Priority").Width(150).Add();
                   col.Field("Status").HeaderText("Status").Width(130).Add();
                   col.Field("StartDate").HeaderText("Start Date").Format("yMd").TextAlign(TextAlign.Right).Width(160).Add();
                   col.Field("EndDate").HeaderText("End Date").Format("yMd").TextAlign(TextAlign.Right).Width(160).Add();
               })
            .ChildMapping("Subtasks")
            .TreeColumnIndex(1)
            .Height(400)
            .Render()
       )
    </div>
}

@*custom code start*@

@section Meta{
                    <meta name="description" content="This example demonstrates the AutoWrap Column Cells in ASP.NET MVC Tree Grid control. Explore here for more details."/>
                }


@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the Tree Grid with the text wrap option enabled
        for both headers and cell content. This setting ensures that long header
        text and cell values are fully visible by wrapping onto multiple lines
        instead of being truncated with an ellipsis. </p>
    </div>
}

@section Description{
    <div id="description">
    <p>In this demo, the <strong>"Title"</strong> and <strong>"Description"</strong> columns
        exceeds the available width, so its header and cell content are wrapped
        across multiple lines for better readability. Text wrapping is enabled
        by setting the Tree Grid's <code><a aria-label="API link for documentation"
                target="_blank" class="code"
                href="https://help.syncfusion.com/cr/aspnetmvc-js2/syncfusion.ej2.treegrid.treegrid.html#Syncfusion_EJ2_TreeGrid_TreeGrid_AllowTextWrap">allowTextWrap</a></code>
        property to <strong>true</strong>, which automatically applies wrapping
        to both header and cell content.</p>
    <p>
        More information about text wrap can be found in this
        <a target="_blank"
            href="https://ej2.syncfusion.com/aspnetmvc/documentation/tree-grid/cell/cell">
            documentation
        </a>section.
    </p>
    </div>
}

@*custom code end*@
@section Title{
                    <title>ASP.NET MVC Tree Grid AutoWrap Column Cells Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of AutoWrap Column Cells in ASP.NET MVC Tree Grid Control</h1>
                }