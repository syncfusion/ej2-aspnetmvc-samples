                    agendaToolbar.style.display = 'none';
                    document.body.appendChild(agendaToolbar);
            }
                if (scheduleObj) {
                    scheduleObj.eventSettings.query = new ej.data.Query();
                    scheduleObj.refreshEvents();
                }
                if (chipListObj && chipListObj.selectedChips !== 0) {
