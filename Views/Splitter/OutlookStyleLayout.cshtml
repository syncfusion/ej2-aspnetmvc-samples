@using Syncfusion.EJ2
@using Syncfusion.EJ2.Lists
@{
    var template = "<div class='settings e-list-wrapper e-list-multi-line'>"
                        + "<span class='e-list-item-header'>${Name}</span>"
                        + "<div class='e-list-content'>"
    + "<div class='status'>${Content1}</div><div id='list-message'>${Content2}</div>"
    + "</span>"
    + "</div>";
    var treeTemplate = "<div><div class='treeviewdiv'><div>" +
                "<span class='treeName'>${name}</span></div>${if(count)}<div>" +
                "<span class='treeCount e-badge e-badge-primary'>${count}</span></div>  ${/if} </div></div>";
}

@section ControlsSection {
    <div class="col-lg-12 control-section" style="height: 580px;">
        <div id="target">
            <div>
                @Html.EJS().Splitter("splitter-outlook").PaneSettings(paneItem =>
                     {
                         paneItem.Size("28%").Min("27%").ContentTemplate(@<div>
                                <div class="content">
                                    @Html.EJS().TreeView("tree").NodeTemplate(treeTemplate).Fields((Syncfusion.EJ2.Navigations.TreeViewFieldsSettings)ViewData["TemplateFields"]).Render()
                                </div>
                            </div>).Add();
       paneItem.Size("33%").Min("23%").ContentTemplate(@<div>
                                    <div class="content">
                                        @Html.EJS().ListView("groupedList").DataSource((IEnumerable<object>)ViewData["ListData"]).Fields(new ListViewFieldSettings { Text = "Name" }).CssClass("e-list-template").Template(template).Render()
                                    </div>
                                </div>).Add();
  paneItem.Size("37%").Min("30%").ContentTemplate(@<div>
                                        <div class='content'>
                                            <div style='width: 100%; padding: 15px;'>
                                                <table>
                                                    <tr>
                                                        <td>
                                                            @Html.EJS().Button("toBtn").CssClass("e-btn e-flat e-outline").Content("To...").Render()
                                                        </td>
                                                        <td>
                                                            @Html.EJS().TextBox("firstname").Render()
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.EJS().Button("ccBtn").CssClass("e-btn e-flat e-outline").Content("Cc...").Render()
                                                        </td>
                                                        <td>
                                                            @Html.EJS().TextBox("lastname").Render()
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><div id='subject-text'>Subject</div></td>
                                                        <td>
                                                            @Html.EJS().TextBox("subject").Render()
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class='forum'>
                                            <div id='createpostholder'>
                                                @Html.EJS().RichTextEditor("defaultRTE").Height("262px").Created("onRteCreate").Render()
                                                <div id='buttonSection'>
                                                    @Html.EJS().Button("send").CssClass("e-btn e-primary").Content("Send").Render()
                                                    @Html.EJS().Button("discard").CssClass("e-btn").Content("Discard").Render()
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>  ).Add();
  }).Resizing("onSplitterResize").Height("493px").Width("100%").Render()
            </div>
        </div>
    </div>
    <style>
        .treeviewdiv {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 8px;
            width: 100%;
            min-width: 0;
        }

        .treeName {
            flex: 1 1 auto;
            min-width: 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .treeCount {
            flex: 0 0 auto;
            white-space: nowrap;
        }

        @@media (max-width: 600px) {
            .treeviewdiv {
                display: flex;
            }
        }

        #discard {
            margin-left: 7px;
        }

        table {
            width: 100%;
        }


        td {
            padding: 2px;
        }

        .control-section {
            min-height: 370px;
        }

        .e-treeview .e-list-text {
            width: 100%;
        }

        #groupedList.e-listview .e-list-group-item {
            height: 0;
        }

        #splitter1 .settings.e-list-wrapper.e-list-multi-line.e-list-avatar {
            padding: 15px;
        }

        #buttonSection {
            padding: 7px;
        }

        #createpostholder {
            padding-left: 3px;
            padding-right: 4px;
        }

        #createpostholder {
            padding-right: 4px;
        }

        #splitter #tree ul.e-list-parent.e-ul {
            padding: 0 0 0 16px;
        }

        .material3-dark .e-listview.e-list-template .e-list-wrapper.e-list-multi-line .e-list-item-header,
        .material-dark .e-listview.e-list-template .e-list-wrapper.e-list-multi-line .e-list-item-header {
            color: #fff;
        }

        .material3-dark .e-listview.e-list-template .e-list-wrapper.e-list-multi-line .e-list-content,
        .material-dark .e-listview.e-list-template .e-list-wrapper.e-list-multi-line .e-list-content {
            color: #9ca3af;
        }
        
        .tailwind .e-list-parent.e-ul,
        .tailwind-dark .e-list-parent.e-ul,
         .tailwind3 .e-list-parent.e-ul,
        .tailwind3-dark .e-list-parent.e-ul {
            overflow : hidden;
        }
        
    </style>
    <script type="text/javascript">

        function onRteCreate() {
            rteObj = this;
        }

        function onSplitterResize() {
            rteObj.refreshUI();
        }

    </script>
}
@section ActionDescription{
    <div id="action-description">
        <p>
            This example demonstrates the splitter control that is used to design outlook-like application using multiple horizontal panes. You can resize its panes horizontally to increase dimension.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            The splitter control is used to create outlook-like user interface application using multiple panes with horizontal orientation.
            To create outlook-style user interface, use TreeView, ListView, and Rich Text Editor controls within split panes.
            The TreeView control is used to display mail folders at left pane and ListView to display details of mail items, and
            Rich Text Editor to create new mail.
        </p>
    </div>
}

