                    <title>ASP.NET MVC Data Grid Adaptive Layout Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Adaptive Layout in ASP.NET MVC Data Grid Control</h1>
                }