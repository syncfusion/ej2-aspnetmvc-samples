@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to add and convert the notes pages of a PowerPoint slide.
}

@section Meta{
    <meta name="description" content="This sample demonstrates how to add and convert the notes pages of a PowerPoint document in ASP.NET MVC using Syncfusion Presentation library."/>
}

@section Description{    
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Add, remove and modify 'Notes Pages' in a PowerPoint slide.</li>
            <li>Convert the 'Notes Pages' to PDF document.</li>
    </ul>
    <br />
}
@section ControlsSection{
    <div class="control-section">
		@{ViewBag.Title = "    Essential Presentation (Presentation) : Notes : Syncfusion";}
		
		@{Html.BeginForm("Notes", "Presentation", FormMethod.Post); }
        <div class="tablediv">
            <text>
                Click the button to view a presentation document generated by Essential Presentation. Please note that Microsoft PowerPoint viewer is required to view the resultant document.
            </text>
        </div>

        <div class="tablediv">
            <div class="rowdiv">
                <div class="celldiv">

                    <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                        <label><strong>Save As :</strong></label>
                        <input type="radio" name="File Type" style="margin-left: 7px" value="PPTX" checked><strong>PPTX</strong>
                        <input type="radio" name="File Type" style="margin-left: 7px" value="PDF Document"><strong>PDF</strong>
                        <br />
                        <br />
                        <label><input id="submit" type="submit" class="e-btn" value="Generate Document" /></label>

                    </div>
                </div>
            </div>
        </div>
    </div>
}