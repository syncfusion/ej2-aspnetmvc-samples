@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to create slide transition effects in PowerPoint presentation.
}

@section Description{
    <b>Features:</b>
    <br />
    <br />
    <div>
        The below transition effects are supported as equivalent to Microsoft PowerPoint:
        <ul>
           <li>Subtle</li>
          <li>Exciting</li>
          <li>Dynamic Content</li>
        </ul>
    </div>
    <br />
    <div>
        The below transition options are supported as equivalent to Microsoft PowerPoint:
        <ul>
          <li>Effect options</li>
          <li>Advance On Time</li>
          <li>Advance Mouse On Click</li>
          <li>Transition Duration</li>
        </ul>
    </div>
    <br />
}

@section ControlsSection{
    <div class="control-section">

        @{ViewBag.Title = "    Essential Presentation (Presentation) : SlideTransition : Syncfusion";}
        @{Html.BeginForm("SlideTransition", "Presentation", FormMethod.Post);}

        <div class="tablediv">
            <text class="rowdiv">
                Click the button to view a presentation document generated by Essential Presentation. Please note that Microsoft PowerPoint viewer is required to view the resultant document.
            </text>
        </div>
        <br />
        <div class="tablediv">
            <div class="rowdiv">
                <div class="celldiv">
                    <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                        <table width="100%">
                            <tr>
                                <td align="left" width="100%">
                                    <label><input id="submit" type="submit" class="e-btn" value="Create Presentation" /></label>
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
}