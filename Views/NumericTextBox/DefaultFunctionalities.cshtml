@using Syncfusion.EJ2.Inputs
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="control-label">
                Numeric TextBox
            </div>
                @Html.EJS().NumericTextBox("numeric").Value(10).Render()
           
        <div class="control-label">
            Percentage TextBox
        </div>
                @Html.EJS().NumericTextBox("percentage").Format("p2").Value(0.5).Max(0).Min(0).Max(1).Step(0.01).Render()
         
        <div class="control-label">
            Currency TextBox
        </div>
                @Html.EJS().NumericTextBox("currency").Format("c2").Value(100).Render()

            </div>
            </div>
            </div>
   

    @*custom code start*@

    <style>

        .content-wrapper {
            width: 35%;
            margin: 0 auto;
            min-width: 185px;
        }

        .e-float-input.e-numeric.e-input-group {
            margin-top: 40px;
        }

        .control-label {
            padding: 24px 0px 10px 0px;
            font-size: 12px;
        }

        @@media only screen and (max-width: 700px) {
            .numeric-control {
                margin: 20% 0 0 32%;
            }

            .control-section {
                min-height: 200px;
            }
        }

        @@media only screen and (max-width: 500px) {
            .control-section {
                min-height: 200px;
            }
        }

        .control-section .row {
            margin: 20px 0;
        }
    </style>
    @*custom code end*@
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Default Functionalities in ASP.NET MVC Numeric Textbox control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the default functionalities of the Numeric TextBox. Type a value in the input element to change the value dynamically,
            or press up/down arrow button to increase/decrease the value with a predefined step value.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            The NumericTextBox component is used to get the number inputs from the user. The input values can be increased or decreased with a predefined step value.
        </p>
        <p>
            In this demo, the default NumericTextBox is rendered with the percent and currency formats as specified in
            <a href="https://learn.microsoft.com/en-us/dotnet/standard/base-types/standard-numeric-format-strings" target="_blank" aria-label="MSDN"> MSDN <span class="sr-only">opens in a new tab</span></a>  
        </p>
        <p>
            More information on the NumericTextBox instantiation can be found in the documentation section.
            <a href="https://ej2.syncfusion.com/aspnetmvc/documentation/numerictextbox/getting-started-mvc" target="_blank" aria-label="documentation section"> documentation section<span class="sr-only">opens in a new tab</span></a>
        </p>
    </div>
}



@section Title{
                    <title>ASP.NET MVC Numeric Textbox Default Functionalities Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Default Functionalities in ASP.NET MVC Numeric Textbox Control</h1>
                }