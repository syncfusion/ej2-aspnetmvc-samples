@using Syncfusion.EJ2
@{ViewBag.Title = "    Essential DocIO (Word) : Export, Word to ODT, Conversion : Syncfusion";}
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("DOCtoODT", "DocIO", FormMethod.Post, new { enctype = "multipart/form-data" });
            {
                <div style="margin-top: 10px">
                    Select Document
                    <br />
                    @Html.TextBox("file", "", new { type = "file", accept = ".doc,.docx,.rtf,.dot,.dotm,.dotx,docm,.xml" })
                    <div style="margin-top: 8px">
                        Click the button to view the resultant ODT document generated by Essential DocIO.
                        <div style="margin-top: 8px">
                            <input class="e-btn" type="submit" value="Convert to ODT" name="button" style="width:170px;text-transform:capitalize" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="text-danger">
                    @ViewBag.Message
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div>
        This sample demonstrates how to convert the Word document to ODT using Essential DocIO.
    </div>
}
@section Description{
    <div>
        DocIO provides support to convert the Word document to Open Document Text format.
    </div>
    <div style="margin-top: 15px">
        More information about the Word to ODT conversion can be found in this
        <a href="https://help.syncfusion.com/file-formats/docio/word-to-odt">documentation</a>
        section.
    </div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Word to ODT in ASP.NET MVC DocIO control. Explore here for more details."/>
                }
@section Title{
                 <title>ASP.NET MVC DocIO Word to ODT Example - Syncfusion Demos </title>
             }
@section Header{
                <h1 class='sb-sample-text'>Example for Word to ODT in ASP.NET MVC DocIO Control</h1>
            }