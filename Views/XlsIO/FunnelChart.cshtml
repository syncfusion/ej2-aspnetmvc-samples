@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to create Funnel chart using XlsIO.
    }

@section Meta{
    <meta name="description" content="This sample demonstrates how to create Excel file with funnel chart in ASP.NET MVC using Syncfusion XlsIO (Excel) library." />
}

@section Description{
<p>
    Funnel charts are a type of chart, often used to represent stages in a sales process and show the amount of potential revenue for each stage. This type of chart can also be useful in identifying potential problem areas in an organization's sales processes.
</p>
<p>
    Essential XlsIO has APIs for creating and modifying funnel charts.
</p>
}
@section ControlsSection{
    <div class="control-section">
        <h5>
            Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
            note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
        </h5>
        <br />
        <h5>  Save As :</h5>
        <div class="celldiv">
            <table>
                <tr>
                    <td>
                        @Html.EJS().RadioButton("radio1").Label("Embedded Chart").Name("select").Value("xls").Checked(false).Render()
                    </td>
                    <td>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </td>
                    <td>
                        @Html.EJS().RadioButton("radio2").Label("Chart Sheet").Name("select").Value("xlsx").Checked(true).Render()
                    </td>
                </tr>
            </table>
        </div>
        <br />
        <div class="celldiv">
            @Html.EJS().Button("createbtn").Content("Create Document").Render()
            @Html.EJS().Button("inputbtn").Content("Input Template").Render()
        </div>
    </div>
    <script>
        document.getElementById('createbtn').onclick = function () {
            if (document.getElementById('radio1').checked == true)
                location.href = '@Html.Raw(@Url.Action("FunnelChart", new { @button = "Create Document", @Saveoption = "embed" }))';
            else
                location.href = '@Html.Raw(@Url.Action("FunnelChart", new { @button = "Create Document", @Saveoption = "sheet" }))';
        };
        document.getElementById('inputbtn').onclick = function () {
                location.href = '@Html.Raw(@Url.Action("FunnelChart", new { @button = "Input Template", @Saveoption = "sheet" }))';
        };
    </script>
}