@using Syncfusion.EJ2
@using Syncfusion.EJ2.Navigations

@section ControlsSection{
    <div class="col-lg-12 control-section db-carousel-section">
        <div class="e-sample-resize-container carousel-sample">
            @(Html.EJS().Carousel("dbCarousel").CssClass("db-carousel")
                .AnimationEffect(CarouselAnimationEffect.Fade)
                .ButtonsVisibility(CarouselButtonVisibility.Hidden)
                .ItemTemplate("#itemTemplate")
                .DataSource((IEnumerable<object>)ViewData["dataSource"])
                .Render()
            )
        </div>
    </div>

    <script id="itemTemplate" type="text/x-template">
        <div class="card">
            <img src=${ImgPath} class="card-img-top" alt=${Title} style="height:210px;width:100%;" />
            <div class="card-body" style="padding:1rem;">
                <h5 class="card-title">${Title}</h5>
                <p class="card-text">${Content}</p>
            </div>
        </div>
    </script>
}

@section ActionDescription{
    <p>
        This sample demonstrates the basic rendering of the <a href="https://www.syncfusion.com/aspnet-mvc-ui-controls/carousel" target="_blank" aria-label="ASP.NET MVC Carousel">ASP.NET MVC Carousel<span class="sr-only">opens in a new tab</span></a> component by binding <code>DataSource</code> property.
    </p>
}

@section Description{
    <p>
        In this demo, products and its details available in our Syncfusion has been shown as slide show. The data to the
        ASP.NET MVC Carousel component is bound using <code>dataSource</code> property. Also,
        <code>itemTemplate</code> is used to customize the slides of the carousel.
    </p>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Data Binding in ASP.NET MVC Carousel control. Explore here for more details."/>
                }

<style>
    .db-carousel-section .carousel-sample {
        border: 1px solid #e5e5e5;
        border-radius: 0.5em;
        margin: 0 auto 2em;
        max-width: 420px;
        height: 420px;
    }

    .db-carousel {
        background-color: inherit;
        border-radius: 0.5em;
    }

        .db-carousel .e-carousel-items .e-carousel-item .card-title,
        .db-carousel .e-carousel-items .e-carousel-item .card-text {
            opacity: 0;
            text-align: justify;
            transform: translateY(20px);
        }

        .db-carousel .e-carousel-items .e-carousel-item.e-active .card-title,
        .db-carousel .e-carousel-items .e-carousel-item.e-active .card-text {
            opacity: 1;
            transform: translateY(0px);
        }

        .db-carousel .e-carousel-items .e-carousel-item .card-title {
            font-size: 20px;
            transition: transform 0.4s ease 0.2s;
        }

        .db-carousel .e-carousel-items .e-carousel-item .card-text {
            font-size: 14px;
            transition: transform 0.4s ease 0.2s;
        }

        .db-carousel .e-carousel-indicators {
            height: 3em;
        }

            .db-carousel .e-carousel-indicators.e-default .e-indicator-bar .e-indicator div {
                background-color: #e7e7e7;
            }

    @@media screen and (max-width: 480px) {
        .db-carousel-section .carousel-sample {
            width: 100%;
            height: 440px;
        }
    }
</style>

@section Title{
                    <title>ASP.NET MVC Carousel Data Binding Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Data Binding in ASP.NET MVC Carousel Control</h1>
                }
