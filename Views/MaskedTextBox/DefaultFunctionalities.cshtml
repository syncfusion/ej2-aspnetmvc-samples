@using Syncfusion.EJ2.Inputs
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="control-label">
                Mobile Number
            </div>
            @Html.EJS().MaskedTextBox("mask1").Mask("000-000-0000").Render()
            <div class="control-label">
                Country ISO Code
            </div>
            @Html.EJS().MaskedTextBox("mask2").Mask(">LL / LLL").Render()
            <div class="control-label">
                D.O.B
            </div>
            @Html.EJS().MaskedTextBox("mask3").Mask("00/00/0000").Render()

            <div class="control-label">
                Product Key
            </div>
            @Html.EJS().MaskedTextBox("mask4").Mask(">AAAAA-AAAAA-AAAAA-AAAAA").Render()

        </div>
    </div>
</div>
<style>
    .content-wrapper {
        width: 30%;
        margin: 0 auto;
        min-width: 185px;
    }

    .control-label {
        padding: 24px 0px 10px 0px;
        font-size: 12px;
    }

    @@media only screen and (max-width: 700px) {
        .numeric-control {
            margin: 20% 0 0 32%;
        }

        .control-section {
            min-height: 200px;
        }
    }

    @@media only screen and (max-width: 500px) {
        .control-section {
            min-height: 200px;
        }
    }
</style>


}

@section Meta{
                    <meta name="description" content="This example demonstrates the Default Functionalities in ASP.NET MVC Input Mask control. Explore here for more details."/>
                }

@section ActionDescription{

   <div id="action-description">
    <p>
        This sample demonstrates that the default functionalities of MaskedTextBox component.
        Enter numeric value for “Mobile Number” textbox then press tab key and then enter “Country ISO Code” in alphabetic format, then type “D.O.B” in numeric format.
        Finally enter the “Product Key” in alpha numeric format.
    </p>
</div>



}
