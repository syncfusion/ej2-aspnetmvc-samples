@using Syncfusion.EJ2
@using Syncfusion.EJ2.Inputs

@section ControlsSection{
    <div class="control-section">
        <div class="rating-control">
            <div class="rating-content">
                <label>Full</label><br />
                @Html.EJS().Rating("rating").Value(3).Precision(PrecisionType.Full).Render()
            </div>
            <div class="rating-content">
                <label>Half</label><br />
                @Html.EJS().Rating("rating1").Value(2.5).Precision(PrecisionType.Half).Render()
            </div>
            <div class="rating-content">
                <label>Quarter</label><br />
                @Html.EJS().Rating("rating2").Value(2.75).Precision(PrecisionType.Quarter).Render()
            </div>
            <div class="rating-content">
                <label>Exact</label><br />
                @Html.EJS().Rating("rating3").Value(2.3).Precision(PrecisionType.Exact).Render()
            </div>
        </div>
    </div>
}

<style>

    .rating-control .rating-content {
        width: 240px;
        margin: 15px 0;
        min-height: 75px;
        padding: 0;
        text-align: center;
    }

    .e-bigger .rating-control .rating-content {
        width: 260px;
        margin: 15px 0;
        min-height: 75px;
        padding: 0;
        text-align: center;
    }

    .rating-control {
        margin: 6% auto;
        max-width: 600px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (document.getElementById('right-pane')) {
            document.getElementById('right-pane').addEventListener('scroll', hideTooltipOnScroll);
        }

        function hideTooltipOnScroll() {
            var tooltipElement = document.querySelector('.e-rating-tooltip');
            if (tooltipElement && ej.base.Browser.isDevice) {
                tooltipElement.style.display = 'none';
            }
        }
    });
</script>

@section Meta{
    <meta name="description" content="This example demonstrates the Precision in ASP.NET MVC Rating Control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the different precision types supported in the ASP.NET MVC Rating control.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            The <code>Precision</code> property used to change the type of precision to <code>Quarter</code>, <code>Half</code>, <code>Full</code> and <code>Exact</code>.
        </p>
    </div>
}
@section Title{
    <title>ASP.NET MVC Rating Precision Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Precision in ASP.NET MVC Rating Control</h1>
}
