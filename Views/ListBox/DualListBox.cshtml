@using Syncfusion.EJ2
@section ControlsSection{
<div class="control-section">
    <div class="dual-list-wrapper">
        <div class="dual-list-groupa">
            <h4>Group A</h4>
            @Html.EJS().ListBox("listbox1").Scope("#listbox2").Height("330px").ToolbarSettings(new Syncfusion.EJ2.DropDowns.ListBoxToolbarSettings { Items = new string[] { "moveUp", "moveDown", "moveTo", "moveFrom", "moveAllTo", "moveAllFrom" } }).Fields(new Syncfusion.EJ2.DropDowns.ListBoxFieldSettings { Text = "Name" }).DataSource((IEnumerable<object>)ViewBag.groupA).NoRecordsTemplate(
            "<div class=\"e-list-nrt\"><span>NO DATA AVAILABLE</span></div>").Render()
        </div>
        <div class="dual-list-groupb">
            <h4>Group B</h4>
            @Html.EJS().ListBox("listbox2").Height("330px").Fields(new Syncfusion.EJ2.DropDowns.ListBoxFieldSettings { Text = "Name" }).DataSource((IEnumerable<object>)ViewBag.groupB).NoRecordsTemplate(
            "<div class=\"e-list-nrt\"><span>NO DATA AVAILABLE</span></div>").Render()
        </div>
    </div>
</div>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Dual ListBox in ASP.NET MVC List Box control. Explore here for more details."/>
                }
@section ActionDescription{
<div id="action-description">
    <p>This sample demonstrates the functionalities of the dual list box. Select an item from <code>Group A</code> and click the <code>moveTo</code> button to move item from <code>Group A</code> to <code>Group B.</code></p>
</div>
}
@section Description{
<div id="description">
    <p>
        The dual list box allows the user to move items between two list boxes. Dual list box can be created by listing items in the <a target="_blank" href="https://help.syncfusion.com/cr/cref_files/aspnetmvc-js2/Syncfusion.EJ2~Syncfusion.EJ2.DropDowns.ListBox~ToolbarSettings.html"><code>ToolbarSettings</code></a> property along with
        <a target="_blank" href="https://help.syncfusion.com/cr/cref_files/aspnetmvc-js2/Syncfusion.EJ2~Syncfusion.EJ2.DropDowns.ListBox~Scope.html"><code>Scope</code></a> property. The supported operations are,
    </p>
    <ul>
        <li><code>moveUp</code> -  Moves the selected item in the upward direction.</li>
        <li><code>moveDown</code> -  Moves the selected item in the downward direction.</li>
        <li><code>moveTo</code> -  Moves the selected item to the Group B list box.</li>
        <li><code>moveFrom</code> -  Moves the selected item from Group B list box to Group A.</li>
        <li><code>moveAllTo</code> -  Moves all the items to the Group B list box.</li>
        <li><code>moveAllFrom</code> -  Moves all the items from Group B list box to Group A.</li>
    </ul>
    <p>
        More information about the dual list box can be found in the
        <a href="https://ej2.syncfusion.com/aspnetmvc/documentation/list-box/" target="_blank"> documentation section</a>.
    </p>
</div>
}

@*custom code start*@

<style>
    .control-section .dual-list-wrapper {
        width: 60%;
        margin: 0 auto 10px;
        display: flex;
    }
    .dual-list-groupa,
    .dual-list-groupb {
        width: 50%;
    }
    .dual-list-groupb .e-listbox-wrapper,
    .dual-list-groupb h4 {
        width: 87%;
        margin-left: 15px;
    }
    @@media screen and (max-width: 590px) {
        .control-section .dual-list-wrapper {
            width: 100%;
        }
        .dual-list-groupa {
            width: 56%;
        }
        .dual-list-groupb {
            width: 44%;
        }
    }
    @@media screen and (max-width: 400px) {
        .dual-list-groupa {
            width: 59%;
        }
        .dual-list-groupb {
            width: 41%;
        }
    }
</style>

@*custom code end*@

@section Title{
                    <title>ASP.NET MVC List Box Dual ListBox Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Dual ListBox in ASP.NET MVC List Box Control</h1>
                }