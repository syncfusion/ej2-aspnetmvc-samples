@using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/financial-data.js"></script>
    <div class="control-section">
        <div style="text-align:center">
            @Html.EJS().Chart("container").Series(series =>
            {
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).DataSource("seriesData").XName("x").YName("y").Add();
            }
            ).ChartArea(area => area.Border(br => br.Width(0))
            ).LegendSettings(legend => legend.Visible(false)
            ).PrimaryXAxis(px => px.MajorGridLines(mg => mg.Width(0)).MajorTickLines(mt => mt.Width(0)).
                ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime).ScrollbarSettings(sc => sc.EnableZoom(false))
            ).PrimaryYAxis(py => py.Title("Temperature").LabelFormat("{value}Â°C").IntervalType(Syncfusion.EJ2.Charts.IntervalType.Months)
                .LineStyle(ls=>ls.Width(0)).MajorTickLines(mt=>mt.Width(0)).EnableScrollbarOnZooming(false)
            ).ZoomSettings(z => z.EnableMouseWheelZooming(true).EnableDeferredZooming(false)
                .EnableSelectionZooming(true).EnableScrollbar(true).EnablePinchZooming(true).Mode(Syncfusion.EJ2.Charts.ZoomMode.X).EnableAnimation(true)
            ).Title("Global Warming: Monthly Temperature Anomalies").Load("load").Render()
