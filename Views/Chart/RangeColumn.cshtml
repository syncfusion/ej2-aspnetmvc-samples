@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
        
            @Html.EJS().Chart("container").Series(series =>
       {
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.RangeColumn).XName("Month").High("Max").Low("Min")
               .Marker(mr=>mr.DataLabel(dl=>dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Outer))).ColumnSpacing(0.4).
               CornerRadius(cr => cr.TopLeft(4).TopRight(4).BottomRight(4).BottomLeft(4)).TooltipMappingName("TooltipText").DataSource(ViewData["ChartPoints"]).Add();
       }).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.Category)
       .MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt => mt.Width(0)).LineStyle(ls => ls.Width(0))
       ).PrimaryYAxis(py => py.LabelFormat("{value}˚F").Minimum(0).Maximum(100).Interval(20).Title("Monthly Temperature Variation (°F)")
       .MajorTickLines(mt => mt.Width(0))
       .EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift)
       .LineStyle(ls => ls.Width(0))
       ).Title("Contiguous U.S. Average Temperature in 2024").SubTitle("Source: ncei.noaa.gov").ChartArea(area => area.Border(br => br.Width(0))
       ).Load("load").Tooltip(tt => tt.Enable(true).Header("<b>${point.tooltip}</b>").
           Format("Temperature : <b>${point.low} - ${point.high}</b>")).LegendSettings(leg => leg.Visible(false).EnableHighlight(true)).Render()
        </div>
    
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>           
}
         @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Range Column in ASP.NET MVC Chart control. Explore here for more details."/>
                }
         @*custom code end*@
