@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
        @Html.EJS().Chart("container").Series(series =>
        {
            series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).Width(3).XName("X").YName("Y1").Name("United States")
                .Animation(an => an.Enable(true).Duration(1500))
                .DataSource(ViewData["ChartData"]).Add();
            series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).Width(3).XName("X").YName("Y2").Name("China")
                .Animation(an => an.Enable(true).Duration(1500).Delay(2300))
                .DataSource(ViewData["ChartData"]).Add();
            series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).Width(3).XName("X").YName("Y3").Name("Afghanistan")
                .Animation(an => an.Enable(true).Duration(1500).Delay(3400))
                .DataSource(ViewData["ChartData"]).Add();
            series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).Width(3).XName("X").YName("Y4").Name("Yemen")
                .Animation(an => an.Enable(true).Duration(1500).Delay(4800))
                .DataSource(ViewData["ChartData"]).Add();
            series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).Width(3).XName("X").YName("Y").Name("Australia")
                .Animation(an => an.Enable(true).Duration(1500).Delay(6200))
                .DataSource(ViewData["ChartData"]).Add();
        }).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime)
            .MajorGridLines(mg => mg.Width(0)).LabelFormat("y")
            .EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift)
        ).PrimaryYAxis(py => py.Title("Yield (In Tons per Hectare)").MajorTickLines(mt => mt.Width(0)).MinorTickLines(mt => mt.Width(0))
            .LineStyle(ls => ls.Width(0)).Interval(2).Maximum(8)
        ).Title("Almond Yield Comparison Across Countries (2010-2022)").Tooltip(tt => tt.Enable(true).EnableHighlight(true).ShowNearestTooltip(true).Header("<b>Almond Yield - ${point.x}</b>").Format("${series.name}: <b>${point.y}</b>")
        ).Load("load").ChartArea(area => area.Border(br => br.Width(0)).Margin(margin => margin.Bottom(12))).LegendSettings(leg => leg.Visible(true).EnableHighlight(true)
        ).Render()
    </div>

    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        };
    </script>
}
@section ActionDescription{
    <p>
        This sample visualizes the almond yield per hectare data for different countries using a spline series in the chart. The data points are enhanced with tooltip and the animation delay is configured to provide a smooth, staggered effect.
    </p>
}
@*custom code start*@
