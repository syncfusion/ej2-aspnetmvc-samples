@using Syncfusion.EJ2;
@section ControlsSection{
<div class="control-section">
    <div style="text-align:center">



        @Html.EJS().Chart("container").Series(series =>
   {

       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingColumn).XName("Period").YName("PVT_Consumption").DataSource(ViewData["ChartPoints"]).Name("Private Consumption").Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingColumn).XName("Period").YName("GOVT_Consumption").DataSource(ViewData["ChartPoints"]).Name("Government Consumption").Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingColumn).XName("Period").YName("Investment").DataSource(ViewData["ChartPoints"]).Name("Investment").Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingColumn).XName("Period").YName("Trade").DataSource(ViewData["ChartPoints"]).Name("Net Foreign Trade").Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("Period").YName("GDP").Opacity(0.6).Marker(mr => mr.Visible(true).Height(7).Width(7)).DataSource(ViewData["ChartPoints"]).Name("GDP").Width(2).Add();
   }).PrimaryYAxis(px => px.Minimum(-3).Maximum(3).Interval(1).Title("Growth (in Billion)").LabelFormat("{value}B").LineStyle(ls=>ls.Width(0)).MajorTickLines(mt=>mt.Width(0))
       ).PrimaryXAxis(px => px.Title("Years").MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt=>mt.Width(0)
       ).LabelIntersectAction(Syncfusion.EJ2.Charts.LabelIntersectAction.Rotate45).ValueType(Syncfusion.EJ2.Charts.ValueType.Category)
       ).Tooltip(tt => tt.Enable(true).EnableHighlight(true)).ChartArea(area => area.Border(br => br.Width(0))).LegendSettings(lg => lg.EnableHighlight(true)).Title("Annual Growth of GDP in France").Load("load").Render()

       
    </div>
</div>

 @*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.interval = ej.base.Browser.isDevice ? 2 : 1;
        };
    </script>     
}
 @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Multi-Series Chart in ASP.NET MVC Chart control. Explore here for more details."/>
                }
 @*custom code end*@
@section ActionDescription{
    <p>
        This sample shows the annual growth of Gross Domestic Product (GDP) in France in a combination of line and stacked column series. A tooltip shows information about the data points.
    </p>
}
