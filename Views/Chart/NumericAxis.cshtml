@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" style="text-align:center">


  @Html.EJS().Chart("container").Series(series =>
{
    series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).Fill("#b22222").XName("xValue").YName("yValue1")
    .Marker(mr =>mr.DataLabel(dl=>dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Top).Font(ViewBag.font)))
    .DataSource(ViewBag.dataSource).Name("England")
    .Add();
    series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).Fill("#1e90ff").XName("xValue").YName("yValue2")
    .Marker(mr => mr.DataLabel(dl => dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Top).Font(ViewBag.font)))
    .DataSource(ViewBag.dataSource).Name("West Indies").Add();

}).PrimaryXAxis(px => px.Title("Death Overs").Minimum(15).Maximum(21).Interval(1).MajorGridLines(mg=>mg.Width(0))
       ).PrimaryYAxis(py => py.MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(0)).LabelStyle(ls=>ls.Color("transparent"))
       ).Title("West Indies").ChartArea(area => area.Border(br=>br.Color("transparent"))).Tooltip(tl => tl.Enable(true)).Load("load").Render()


    <div style="float: right; margin-right: 10px;">
        Source:
        <a href="http://www.espncricinfo.com/icc-world-twenty20-2016/engine/current/match/951373.html" target="_blank">www.espncricinfo.com</a>
    </div>
</div>


<style>
    #control-container {
        padding: 0px !important;
    }
</style>
    <script>
        var labelRender = function (args) {
            if (args.axis.orientation === 'Horizontal') {
                args.cancel = args.value === 15 || args.value === 21;
            }
        };
        var load = function (args) {
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "60%";
        };
</script>
}
@section Meta{
    <meta name="description" content="This demo for Essential JS2 Chart control shows how to plot numeric data with the help of numeric axis in charts." />
}
@section ActionDescription{
    <p>
        This sample demonstrates the rendering of numeric axis in the chart with England and West indies cricket match data.
    </p>
}
@section Description{
   <p>
        Numeric axis is used to plot numeric data in chart. To render numeric axis, set <code>valueType</code> in axis to <code>Double</code>.
    </p>
    <p>
        Tooltip is enabled in this example, to see the tooltip in action, hover a point or tap on a point in touch enabled devices.
   </p>
   <p>
    More information on the Numeric axis can be found in this
    <a target="_blank" href="http://ej2.syncfusion.com/documentation/chart/api-axis.html#valuetype-valuetype">documentation section</a>.
    </p>
}