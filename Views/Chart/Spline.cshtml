@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">     
            @Html.EJS().Chart("container").Series(series =>
            {
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).XName("Days").YName("MaxTemp")
                    .Marker(mr => mr.Visible(true).Width(7).Height(7).IsFilled(true))
                    .DataSource(ViewData["SplineData"]).Name("Max Temp").Width(2).Add();
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).XName("Days").YName("AvgTemp").Marker(mr => mr.Visible(true).Width(7).Height(7).IsFilled(true)).DataSource(ViewData["SplineData"]).Name("Avg Temp").Width(2).Add();
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).XName("Days").YName("MinTemp").Marker(mr => mr.Visible(true).Width(7).Height(7).IsFilled(true)).DataSource(ViewData["SplineData"]).Name("Min Temp").Width(2).Add();
            }).PrimaryXAxis(px => px.LabelIntersectAction(Syncfusion.EJ2.Charts.LabelIntersectAction.Rotate90)
                .MajorGridLines(mg => mg.Width(0)).Interval(1).MajorTickLines(mt => mt.Width(0))
                .ValueType(Syncfusion.EJ2.Charts.ValueType.Category)
            ).PrimaryYAxis(py => py.LabelFormat("{value}°F").Minimum(0).Interval(20).Title("Temperature (°F)")
                .MajorTickLines(mt => mt.Width(0)).MinorTickLines(mt => mt.Width(0)).LineStyle(ls => ls.Width(0))
            ).Title("2024 US Temperature Trends with Hottest Coldest and Average Records").SubTitle("Source: ncei.noaa.gov").Annotations(an => {
                an.X("Jan").Y("22.75").CoordinateUnits(Syncfusion.EJ2.Charts.Units.Point).VerticalAlignment(Syncfusion.EJ2.Charts.Position.Middle).Content("#chart_cloud").Add();
                an.X("Jul").Y("88.43").CoordinateUnits(Syncfusion.EJ2.Charts.Units.Point).VerticalAlignment(Syncfusion.EJ2.Charts.Position.Middle).Content("#chart_sunny").Add();
            }).Tooltip(tt => tt.Enable(true).Shared(true).ShowNearestTooltip(true).Header("<b>${point.x}</b>").Format("${series.name} : <b>${point.y}</b>")).Crosshair(crosshair => crosshair.Enable(true).LineType(Syncfusion.EJ2.Charts.LineType.Vertical).HighlightCategory(true)).ChartArea(area => area.Border(br => br.Width(0)).Margin(margin => margin.Bottom(12))).Load("load").LegendSettings(leg => leg.EnableHighlight(true)).Render()
        </div>
    
    <style>
    @*custom code start*@
         #control-container {
            padding: 0px !important;
         }
    @*custom code end*@
    @@keyframes opac {
        0% {
            stroke-opacity: 1;
            stroke-width: 0px;
        }
        100% {
            stroke-opacity: 0;
            stroke-width: 10px;
        }
    }
    </style>
<div id='chart_cloud' style="display:none">
    <img src="@Url.Content("~/Content/chart/cloud.png")"  style='width: 41px; height: 41px' />
</div>
<div id='chart_sunny' style="display:none">
    <img src="@Url.Content("~/Content/chart/sunny.png")" style='width: 41px; height: 41px' />
</div>
     <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
           loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.height = "500px";
            args.chart.crosshair.highlightCategory = true;
        }
    </script>
}
   @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Spline in ASP.NET MVC Chart control. Explore here for more details."/>
                }
   @*custom code end*@
