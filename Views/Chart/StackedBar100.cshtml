@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">

        @Html.EJS().Chart("container-vertical").Series(series =>
       {
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingBar100).XName("Month").YName("AppleSales").Border(br => br.Width(1).Color("#ffffff")).Name("Apple").ColumnWidth(0.6).Width(2).DataSource(ViewBag.ChartPoints).Add();
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingBar100).XName("Month").YName("OrangeSales").Border(br => br.Width(1).Color("#ffffff")).Name("Orange").ColumnWidth(0.6).Width(2).DataSource(ViewBag.ChartPoints).Add();
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StackingBar100).XName("Month").YName("Wasteage").Border(br => br.Width(1).Color("#ffffff")).Name("Wastage").ColumnWidth(0.6).Width(2).DataSource(ViewBag.ChartPoints).Add();
           
       }).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.Category).MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt=>mt.Width(0))
       ).PrimaryYAxis(py => py.EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).MajorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(0))
       ).Title("Sales Comparison").ChartArea(area => area.Border(br => br.Width(0))).Tooltip(tt => tt.Enable(true).Format("${point.x} : <b>${point.y} (${point.percentage}%)</b>")).LegendSettings(leg => leg.Visible(true).EnableHighlight(true)).Load("load").Render()
        
        </div>
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script>
        var load = function (args) {
            var selectedTheme = themeName ? themeName : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
   @*custom code start*@
