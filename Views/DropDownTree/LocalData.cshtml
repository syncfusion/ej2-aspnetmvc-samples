@using EJ2MVCSampleBrowser.Models
@using Syncfusion.EJ2.DropDowns
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section col-lg-12 dropdowntree-local">
        <div class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h4> Hierarchical Data</h4>
                @Html.EJS().DropDownTree("ddtlocal").Placeholder("Select a item").PopupHeight("200px").Fields((DropDownTreeFields)ViewData["hierarchicalFields"]).Render()
            </div>
        </div>
        <div class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h4>List Data</h4>
                @Html.EJS().DropDownTree("ddtlist").Placeholder("Select a item").PopupHeight("200px").Fields((DropDownTreeFields)ViewData["localFields"]).Render()
            </div>
        </div>
    </div>

    @*custom code start*@
    <style>
        .dropdowntree-local .nested-data,
        .dropdowntree-local .list-data {
            padding: 15px;
            margin-bottom: 25px;
        }

        .dropdowntree-local .content {
            margin: 0 auto;
            width: 250px;
        }
    </style>
    @*custom code end*@
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Local Data in ASP.NET MVC Dropdown Tree control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample explains you about the different local data binding supports of the Dropdown Tree control. Click the Dropdown Tree element,
            and then select an item from the hierarchical structure suggestion list.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            The Dropdown Tree control loads the data through the <code>DataSource</code> property, where the data can be
            either local data or remote data. In case of local data, the data structure can be hierarchical data or list
            data (with self-referential format i.e., mapped with the <b>Value</b> and <b>ParentValue</b> fields).
        </p>
        <p>
            In this demo, the first Dropdown Tree is bound with the hierarchical data that contains the array of nested objects.
            And, the second Dropdown Tree is bound with the list type data where the parent-child relation is referred by the
            <b>Value</b> and <b>ParentValue</b> mapping fields.
        </p>
    </div>
}

@section Title{
                    <title>ASP.NET MVC Dropdown Tree Local Data Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Local Data in ASP.NET MVC Dropdown Tree Control</h1>
                }