               new MapsNavigationLine { Visible = true, Angle = -0.8, Color = "black", DashArray = "5,1", Latitude = new double[] { 19.0759837, 23.12911 }, Longitude = new double[] { 72.8776559, 113.264385 } },
               new MapsNavigationLine { Visible = true, Angle = -0.8, Color = "black", DashArray = "5,1", Latitude = new double[] { 13.0826802, 22.396428 }, Longitude = new double[] { 80.2707184, 114.109497 } },
               new MapsNavigationLine { Visible = true, Angle = -0.8, Color = "black", DashArray = "5,1", Latitude = new double[] { 22.572646, 24.880095 }, Longitude = new double[] { 88.363895, 102.832891 } },
           },
           MarkerSettings = new List<MapsMarker>
           {
               new MapsMarker { Visible = true, Shape = MarkerType.Circle, Fill = "white", Width = 4, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 },
               new MapsMarker { Visible = true, AnimationDuration = 0 }
           }
       }}).Render()
            <div style="margin-left:75%">
                Source:
                <a href="https://www.tibettravel.org/nepal-map/nepal-india-map.html" target="_blank" aria-label="tibettravel">www.tibettravel.org</a>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var markerLocation = [
            {
