                '</div>';
            args.maps.layers[0].markerSettings[8].offset = { x : 20, y : 20 };
            args.maps.layers[0].markerSettings[9].dataSource = [
                {
                    'name': 'Guangzhou',
                    'latitude': 23.12911,
                    'longitude': 113.264385
                }
            ];
            args.maps.layers[0].markerSettings[9].template = '<div id="marker1" style="font-size:12px;color:black;font-weight: 500";>Guangzhou' +
                '</div>';
            args.maps.layers[0].markerSettings[9].offset = { x : 35, y : -10 };
        }
    </script>
}
