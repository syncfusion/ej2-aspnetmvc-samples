                }
            ];
            args.maps.layers[0].markerSettings[6].template = '<div id="marker1" style="font-size:12px;color:black;font-weight: 500";>Beijing' +
                '</div>';
            args.maps.layers[0].markerSettings[6].offset = { x : 0, y : 12 };
            args.maps.layers[0].markerSettings[7].dataSource = [
