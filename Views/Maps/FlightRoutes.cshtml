@using Syncfusion.EJ2
@using Syncfusion.EJ2.Maps

@section ControlsSection{
    <style>
        #container {
            display: table;
            margin: 0 auto;
        }
    </style>

    <script src="~/Scripts/PenisularLocation.js"></script>
    <div class="control-section">
        <div id="outer" style="width:100%">
            @Html.EJS().Maps("container").Load("mapLoad").CenterPosition(new MapsCenterPosition { Latitude = 30.41078179084589, Longitude = 90.52734374999999 }).ZoomSettings(new Syncfusion.EJ2.Maps.MapsZoomSettings
       {
           Enable = false,
           ZoomFactor = 3.5
       }).TitleSettings(new Syncfusion.EJ2.Maps.MapsTitleSettings
       {
           Text = "Flights from India to China",
           TextStyle = new MapsFont{ Size = "16px", Opacity = 1 }
       }).Layers(new List<Syncfusion.EJ2.Maps.MapsLayer>{
       new Syncfusion.EJ2.Maps.MapsLayer
       {
           ShapeData = ViewData["ShapeData"],
           ShapePropertyPath = "name",
           ShapeDataPath = "name",
           DataSource =  ViewData["DataSource"],
           ShapeSettings = new MapsShapeSettings
           {
               Fill = "#fcfbf9",
               Border = new MapsBorder{ Width = 0.1 , Color = "black", Opacity = 1 },
               ColorValuePath="name",
               ColorMapping = (List<MapsColorMapping>)ViewData["ColorMapping"]
           },
           NavigationLineSettings = new List<MapsNavigationLine>
           {
               new MapsNavigationLine { Visible = true, Angle = -0.8, Color = "black", DashArray = "5,1", Latitude = new double[] { 28.6139391, 39.9041999 }, Longitude = new double[] { 77.2090212, 116.4073963 } },
               new MapsNavigationLine { Visible = true, Angle = -0.8, Color = "black", DashArray = "5,1", Latitude = new double[] { 28.6139391, 31.2303904 }, Longitude = new double[] { 77.2090212, 121.4737021 } },
