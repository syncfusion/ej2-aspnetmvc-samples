@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates merging two PowerPoint presentation documents with paste options - use destination theme and source formatting.
}

@section Description{    
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Copied slides can be merged with 'source' or 'destination' paste options equivalent to Microsoft PowerPoint.</li>
            <li>Merge an entire presentation with another Presentation by merging all the copied slides of the presentation to another.</li>
    </ul>
    <br />
}

@section ControlsSection{
    <div class="control-section">
		@{ViewBag.Title = "    Essential Presentation (Presentation) : MergingPresentation : Syncfusion";}
		
		@{Html.BeginForm("MergingPresentation", "PowerPoint", FormMethod.Post); }
        <div class="tablediv">
            <div class="rowdiv">
                <text>
                    Click the button to view a presentation document generated by Essential Presentation. Please note that Microsoft PowerPoint viewer is required to view the resultant document.
                </text>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input type="radio" id="Radio3" name="Group1" value="DestinationTheme" checked="checked" />
                    <label for="Radio3">
                        Use Destination Theme
                    </label>
                    <input type="radio" id="Radio4" name="Group1" style="margin-left: 7px" value="SourceFormatting" />
                    <label for="Radio4">
                        Keep Source Formatting
                    </label>
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input type="submit" class="e-btn" value="Generate Document" style="width:200px;" />
                </div>
                <br />
            </div>
        </div>
    </div>
}
@section Title{
                    <title>ASP.NET MVC PowerPoint (Presentation) library - Merging Presentations Example - Syncfusion Demos </title> 
                }
@section Meta{
                    <meta name="description" content="This sample demonstrates merging two PowerPoint presentation documents with paste options - use destination theme and source formatting."/>
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Merging Presentations in ASP.NET MVC PowerPoint (Presentation) Library</h1>
                }