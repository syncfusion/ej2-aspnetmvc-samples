    <script>
        var data = bitCoinData;
        var selectedTheme = themeName ? themeName : 'Material';
        var theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/contrast/i, 'Contrast');
        var defaultthemes = ['bootstrap5', 'bootstrap5dark', 'tailwind', 'tailwinddark', 'material', 'materialdark', 'bootstrap4', 'bootstrap', 'bootstrapdark', 'fabric', 'fabricdark', 'highcontrast', 'fluent', 'fluentdark', 'material3', 'material3dark'];
        var borderColor = ['#6355C7', '#8F80F4', '#4F46E5', '#161616', '#00bdae', '#161616', '#a16ee5', '#a16ee5', '#a16ee5', '#4472c4', '#4472c4', '#79ECE4', '#1AC9E6', '#1AC9E6', '#6355C7', '#4EAAFF'];
        var regionColor = ['rgba(99, 85, 199, 0.3)', 'rgba(143, 128, 244, 0.6)',
            'rgba(79, 70, 229, 0.3)', 'rgba(22, 22, 22, 0.6)', 'rgba(0, 189, 174, 0.3)', 'rgba(22, 22, 22, 0.6)',
            'rgba(161, 110, 229, 0.3)', 'rgba(161, 110, 229, 0.3)', 'rgba(22, 22, 22, 0.6)', 'rgba(68, 114, 196, 0.3)',
            'rgba(22, 22, 22, 0.6)', 'rgba(121, 236, 228, 0.3)', 'rgba(26, 201, 230, 0.3)', 'rgba(26, 201, 230, 0.6)', 'rgba(99, 85, 199, 0.3)', 'rgba(78, 170, 255, 0.6)'];
        var load = function (args) {
            args.rangeNavigator.theme = theme;
            args.rangeNavigator.width = ej.base.Browser.isDevice ? "100%" : "80%";
            args.rangeNavigator.series[0].dataSource = data;
            args.rangeNavigator.series[0].border = { width: 2, color: borderColor[defaultthemes.indexOf(theme.toLowerCase())] };
            args.rangeNavigator.series[0].fill = 'url(#' + theme.toLowerCase() + '-gradient-chart)';
            args.rangeNavigator.value = [new Date('2017-09-01'), new Date('2018-02-01')];
            args.rangeNavigator.navigatorStyleSettings.unselectedRegionColor = 'transparent';
            args.rangeNavigator.navigatorStyleSettings.selectedRegionColor = regionColor[defaultthemes.indexOf(theme.toLowerCase())];
        }
    </script>
