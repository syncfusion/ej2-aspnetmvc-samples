@using Syncfusion.EJ2
@section ControlsSection{
    <div class="col-lg-12 control-section">
        <div id="wrapper">
            @Html.EJS().DateTimePicker("datetime").Placeholder("Select a date and time").RenderDayCell("disableDate").Render()
        </div>
    </div>
}

<script>
    function disableDate(args) {
        if (args.date.getDay() === 0 || args.date.getDay() === 6) {
            args.isDisabled = true;
        }
    }
</script>

    @*custom code start*@
<style>
    #wrapper {
        max-width: 246px;
        margin: 30px auto;
        padding-top: 50px;
    }
</style>
    @*custom code end*@


@section ActionDescription{
    <div id="action-description">
        <p>
            In the following sample, all the weekends (Saturday and Sunday) of a month are
        <code>disabled</code>, and these dates are restricted to set or select in the DateTimePicker.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            Disabled Dates sample demonstrates how to disable specific dates in the Calendar by using <code>renderDayCell</code>        event. This event gets triggered on each day cell element creation, that allows you to customize, or disable specific
            dates in the Calendar. Here the weekend dates are disabled by using renderDayCell.
        </p>
        <p>
            More information on the disabled dates can be found in the
            <a href="https://ej2.syncfusion.com/aspnetmvc/documentation/datetimepicker/customization/#day-and-time-cell-format" target="_blank" aria-label="documentation section"> documentation section<span class="sr-only">opens in a new tab</span></a>.
        </p>
    </div>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Disabled Dates in ASP.NET MVC DateTimePicker control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET MVC DateTimePicker Disabled Dates Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Disabled Dates in ASP.NET MVC DateTimePicker Control</h1>
                }